<div class="ui relaxed equal width grid">
  <div class="ui row">
    <div class="ui four wide column"></div>
    <div class="ui eight wide column segment error">
      <h2 class="ui center aligned dividing header">Sign Up</h2>
      <%= devise_error_messages! %>

        <div class="ui form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="field">
              <%= f.label :name %>
              <div class="ui left icon input">
                <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Full Name" %>
                <i class="user icon"></i>
              </div>
            </div>

            <div class="field">
              <%= f.label :email %>
              <div class="ui left icon input">
              <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email Address" %>
              <i class="user icon"></i>
            </div>
            </div>

            <div class="field">
              <%= f.label :password %>
              <div class="ui left icon input">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
              <i class="lock icon"></i>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %>
              <div class="ui left icon input">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
              <i class="lock icon"></i>
            </div>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "ui submit button primary" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
